# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here
NEO4J_DATABASE=neo4j

# For Neo4j AuraDB, use:
# NEO4J_URI=neo4j+s://xxxxx.databases.neo4j.io
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=your_aura_password

# OpenAI Configuration (for customer chatbot)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development
UTILITY_TYPE=water  # water or gas

# Vector Search Configuration
VECTOR_DIMENSION=1536
VECTOR_SIMILARITY_FUNCTION=cosine

# Data Generation
GENERATE_SYNTHETIC_DATA=true
NUM_PIPELINE_SEGMENTS=500
NUM_PUMPING_STATIONS=20
NUM_STORAGE_TANKS=10
NUM_METERS=50000
NUM_CUSTOMERS=50000

# Leak Detection Thresholds
PRESSURE_THRESHOLD_MIN=2.0  # bar
PRESSURE_THRESHOLD_MAX=8.0  # bar
FLOW_ANOMALY_THRESHOLD=2.5  # standard deviations

# Billing Configuration
BILLING_CYCLE_DAY=1  # Day of month for billing
WATER_RATE_PER_M3=2.50
GAS_RATE_PER_M3=0.75
